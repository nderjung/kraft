{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "specification_v0.4.json",
  "type": "object",
  "required": ["specification", "unikraft"],

  "properties": {
    "specification": {
      "type": [ "string", "number" ]
    },

    "name": { "type": "string" },

    "unikraft": {
      "id": "#/properties/unikraft",
      "$ref": "#/definitions/unikraft",
      "additionalProperties": true
    },

    "architectures": {
      "id": "#/properties/architectures",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/architecture"
        }
      },
      "additionalProperties": true
    },

    "platforms": {
      "id": "#/properties/platforms",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/platform"
        }
      },
      "additionalProperties": true
    },

    "libraries": {
      "id": "#/properties/libraries",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/library"
        }
      },
      "additionalProperties": true
    },

    "run": {
      "id": "#/properties/run",
      "$ref": "#/definitions/run",
      "additionalProperties": true
    }
  },

  "additionalProperties": true,

  "definitions": {

    "unikraft": {
      "id": "#/definitions/unikraft",
      "type": [ "object", "string", "number" ],
      "properties": {
        "source": { "type": "string" },
        "version": { "type": [ "string", "number" ] },
        "kconfig": { "$ref": "#/definitions/list_or_dict" }
      }
    },

    "architecture": {
      "id": "#/definitions/architecture",
      "type": [ "object", "boolean", "number", "string", "null" ],
      "properties": {
        "source": { "type": "string" },
        "version": { "type": [ "string", "number" ] },
        "kconfig": { "$ref": "#/definitions/list_or_dict" }
      }
    },

    "platform": {
      "id": "#/definitions/platform",
      "type": [ "object", "boolean", "number", "string", "null" ],
      "properties": {
        "source": { "type": "string" },
        "version": { "type": [ "string", "number" ] },
        "kconfig": { "$ref": "#/definitions/list_or_dict" },
        "pre_up": { "$ref": "#/definitions/command" },
        "post_down": { "$ref": "#/definitions/command" },
        "cpus": { "type": [ "string", "integer" ] },
        "memory": { "type": [ "string", "integer" ] }
      }
    },

    "library": {
      "id": "#/definitions/library",
      "type": [ "object", "boolean", "number", "string", "null" ],
      "properties": {
        "source": { "type": "string" },
        "version": { "type": [ "string", "number" ] },
        "kconfig": { "$ref": "#/definitions/list_or_dict" }
      }
    },

    "run": {
      "id": "#/definitions/run",
      "type": "object",
      "properties": {
        "arguments": { "type": "string" },
        "pre_up": { "$ref": "#/definitions/command" },
        "post_down": { "$ref": "#/definitions/command" },
        "networks": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9._-]+$": {
              "$ref": "#/definitions/network"
            }
          },
          "additionalProperties": false
        },
        "volumes": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9._-]+$": {
              "$ref": "#/definitions/volume"
            }
          },
          "additionalProperties": false
        }
      }
    },

    "volume": {
      "id": "#/definitions/volume",
      "type": [ "object" ],
      "properties": {
        "type": { "type": "string" },
        "source": { "type": "string" }
      }
    },

    "network": {
      "id": "#/definitions/network",
      "type": [ "object", "boolean" ],
      "properties": {
        "pre_up": {
          "$ref": "#/definitions/command",
          "additionalProperties": false
        },
        "post_down": {
          "$ref": "#/definitions/command",
          "additionalProperties": false
        },
        "ip": { "type": "string" },
        "gateway": { "type": "string" },
        "netmask": { "type": "string" },
        "interface": { "type": "string" },
        "driver": { "type": "string" },
        "type": { "type": "string" },
        "bridge_name": { "type": "string" }
      }
    },

    "source": {
      "type": "string"
    },

    "command": {
      "type": [ "string", "array" ],
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },

    "list_or_dict": {
      "type": [ "object", "array" ],
      "oneOf": [
        {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": ["string", "number", "null"]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        }
      ]
    }
  }
}
